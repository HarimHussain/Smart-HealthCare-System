<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.LoginController"
            styleClass="auth-container">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <VBox alignment="CENTER" spacing="40" style="-fx-padding: 40;">
                <VBox alignment="CENTER" spacing="8">
                    <Label text="ðŸ¥" style="-fx-font-size: 64px;"/>
                    <Label text="Smart Healthcare System" styleClass="auth-title"/>
                    <Label text="Iqra University Health Center" styleClass="auth-subtitle"/>
                </VBox>

                <VBox styleClass="auth-card" alignment="CENTER" spacing="24">
                    <VBox alignment="CENTER_LEFT" spacing="24">
                        <Label text="Welcome Back" styleClass="auth-title" style="-fx-font-size: 24px;"/>

                        <VBox spacing="16">
                            <VBox styleClass="form-group">
                                <Label text="Email Address" styleClass="input-label"/>
                                <TextField fx:id="emailField" styleClass="input-field"
                                           promptText="Enter your email"/>
                            </VBox>

                            <VBox styleClass="form-group">
                                <Label text="Password" styleClass="input-label"/>
                                <PasswordField fx:id="passwordField" styleClass="input-field"
                                               promptText="Enter your password"/>
                            </VBox>

                            <VBox styleClass="form-group">
                                <Label text="User Type" styleClass="input-label"/>
                                <ComboBox fx:id="userTypeComboBox" styleClass="input-field">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Patient"/>
                                            <String fx:value="Doctor"/>
                                            <String fx:value="Admin"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </VBox>
                        </VBox>

                        <VBox spacing="12">
                            <Label fx:id="errorLabel" styleClass="alert-error"
                                   text="" visible="false" wrapText="true"/>

                            <Button text="Sign In" onAction="#handleLogin"
                                    styleClass="btn-primary"
                                    style="-fx-font-size: 16px; -fx-padding: 14px 28px;"/>

                            <HBox alignment="CENTER" spacing="4">
                                <Label text="Don't have an account?" styleClass="text-muted"/>
                                <Hyperlink text="Register as Patient" onAction="#handleRegister"
                                           style="-fx-text-fill: #3b82f6; -fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>

                <Label text="Â© 2024 Iqra University - Department of Computer Science"
                       styleClass="text-muted" style="-fx-font-size: 12px;"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>