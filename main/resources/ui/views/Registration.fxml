<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.RegistrationController"
            styleClass="auth-container full-height full-width">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <VBox alignment="CENTER" spacing="40" style="-fx-padding: 40;">
                <VBox alignment="CENTER" spacing="8">
                    <Label text="ðŸ¥" style="-fx-font-size: 64px;"/>
                    <Label text="Create Patient Account" styleClass="auth-title"/>
                    <Label text="Join our healthcare system" styleClass="auth-subtitle"/>
                </VBox>

                <VBox styleClass="auth-card" alignment="CENTER" spacing="24">
                    <VBox spacing="24">
                        <GridPane hgap="16" vgap="16">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <!-- Full Name -->
                            <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Full Name *" styleClass="form-label"/>
                                <TextField fx:id="nameField" styleClass="form-control"
                                           promptText="Enter full name"/>
                            </VBox>

                            <!-- Email -->
                            <VBox styleClass="form-group" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Email Address *" styleClass="form-label"/>
                                <TextField fx:id="emailField" styleClass="form-control"
                                           promptText="Enter email address"/>
                            </VBox>

                            <!-- Password -->
                            <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Password *" styleClass="form-label"/>
                                <PasswordField fx:id="passwordField" styleClass="form-control"
                                               promptText="Enter password"/>
                            </VBox>

                            <!-- Confirm Password -->
                            <VBox styleClass="form-group" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Confirm Password *" styleClass="form-label"/>
                                <PasswordField fx:id="confirmPasswordField" styleClass="form-control"
                                               promptText="Confirm password"/>
                            </VBox>
                        </GridPane>

                        <!-- Medical History -->
                        <VBox styleClass="form-group">
                            <Label text="Medical History (Optional)" styleClass="form-label"/>
                            <TextArea fx:id="medicalHistoryField" styleClass="form-control"
                                      promptText="Any medical conditions or history"
                                      prefRowCount="4" wrapText="true"/>
                        </VBox>
                    </VBox>

                    <VBox spacing="12">
                        <Label fx:id="errorLabel" styleClass="alert-error"
                               text="" visible="false" wrapText="true"/>

                        <HBox spacing="12">
                            <Button text="Create Account" onAction="#handleRegister"
                                    styleClass="btn-success" HBox.hgrow="ALWAYS"/>
                            <Button text="Back to Login" onAction="#handleBackToLogin"
                                    styleClass="btn-secondary" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
