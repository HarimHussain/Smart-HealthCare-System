<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="register-page"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controllers.RegistrationController">

    <padding><Insets top="40" right="20" bottom="40" left="20"/></padding>

    <VBox alignment="CENTER" spacing="8">
        <Label text="ðŸ¥" styleClass="logo"/>
        <Label text="Patient Registration" styleClass="title"/>
    </VBox>

    <VBox styleClass="card" spacing="15" maxWidth="500">
        <Label text="Create Account" styleClass="card-title"/>

        <GridPane hgap="15" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <!-- Row 1 -->
            <Label text="Full Name *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

            <Label text="Email *" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Row 2 -->
            <Label text="Password *" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

            <Label text="Confirm *" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <PasswordField fx:id="confirmField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <VBox spacing="8">
            <Label text="Medical History (Optional)"/>
            <TextArea fx:id="medicalHistoryArea" prefRowCount="3"/>
        </VBox>

        <Label fx:id="errorLabel" styleClass="error" visible="false"/>

        <HBox spacing="10">
            <Button text="Register" onAction="#handleRegister" styleClass="btn-primary" HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#handleBack" styleClass="btn-secondary" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</VBox>