<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controllers.BookAppointmentController">

    <Label text="Book Appointment" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="15" styleClass="card">
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <Label text="Specialization" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="specializationComboBox" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

            <Label text="Date" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <VBox spacing="8">
            <Label text="Medical Condition"/>
            <TextArea fx:id="conditionField" prefRowCount="4" wrapText="true"/>
        </VBox>

        <Label fx:id="errorLabel" styleClass="error" visible="false" wrapText="true"/>

        <HBox spacing="10">
            <Button text="Book" onAction="#handleBookAppointment" styleClass="btn-primary" HBox.hgrow="ALWAYS"/>
            <Button text="Clear" onAction="#handleCancel" styleClass="btn-secondary" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</VBox>